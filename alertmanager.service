[Unit]
Description=Alert Manager
Requires=docker.service
After=docker.service

[Service]
Environment="NAME=alertmanager"
Environment="IMG=prom/alertmanager:latest"

ExecStartPre=-/usr/bin/docker pull $IMG
ExecStartPre=-/usr/bin/docker rm -f $NAME
ExecStart=/usr/bin/docker run -p 9093:9093 --name ${NAME} -v /home/core/pingdom/alertmanager.conf:/alertmanager.conf ${IMG} -config.file=/alertmanager.conf

[Install]
WantedBy=multi-user.target
