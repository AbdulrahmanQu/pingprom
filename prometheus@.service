[Unit]
Description=Prometheus
Requires=docker.service
After=docker.service

[Service]
ExecStartPre=-/usr/bin/docker pull prom/prometheus
ExecStart=/usr/bin/docker run --rm -v /home/%i/pingprom/data:/prometheus/data --link alertmanager --link blackboxprober --name prom -v /home/%i/pingprom/prometheus:/etc/prometheus/ prom/prometheus -config.file=/etc/prometheus/prometheus.yml -web.console.libraries=/etc/prometheus/console_libraries -web.console.templates=/etc/prometheus/consoles -alertmanager.url=http://alertmanager:9093 -web.external-url=https://prom.dabase.com/
RestartSec=10
Restart=on-failure

[Install]
WantedBy=multi-user.target
